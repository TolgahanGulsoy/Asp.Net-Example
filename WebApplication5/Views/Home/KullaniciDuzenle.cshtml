@model WebApplication5.Models.CUSTOMERS
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Kullanıcı Düzenle</h3>
    </div>
    @using (Html.BeginForm())
    {
        <input type="hidden" name="ID" value="@Model.ID" />
        <div class="card-body">
            <div class="form-group">
                <label>
                    Ad Soyad
                </label>
                <div>
                    <input type="text" name="CUSTOMERNAME" value="@Model.CUSTOMERNAME" />
                </div>
            </div>
            <div class="form-group">
                <label>
                    Yaş
                </label>
                <div>
                    <input type="text" name="AGE" value="@Model.AGE" />
                </div>
            </div>

            <div class="form-group">
                <label>
                    Cinsiyet
                </label>
                <div>
                    <input type="text" name="GENDER" value="@Model.GENDER" />
                </div>
            </div>
            <div class="form-group">
                <label>
                    Email
                </label>
                <div>
                    <input type="text" name="EMAIL" value="@Model.EMAIL" />
                </div>
            </div>
            <div class="form-group">
                <label>
                    Şifre
                </label>
                <div>
                    <input type="password" name="PASSWORD" value="@Model.PASSWORD" />
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-success" type="submit">
                Kaydet
            </button>
        </div>
    }
</div>
